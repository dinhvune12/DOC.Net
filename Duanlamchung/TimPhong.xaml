<Window x:Class="Duanlamchung.TimPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Quản Lý Khách Sạn - Tìm &amp; Đặt Phòng" 
        Height="750" Width="1100" 
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="15" Padding="25" Margin="0,0,0,25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Direction="-90" RenderingBias="Quality" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Tìm kiếm phòng trống" FontSize="26" FontWeight="SemiBold" Foreground="#2D3436" Margin="0,0,0,20"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="10,0">
                        <TextBlock Text="Ngày nhận phòng" Foreground="#636E72" Margin="0,0,0,8" FontSize="13"/>
                        <DatePicker Height="40" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0">
                        <TextBlock Text="Ngày trả phòng" Foreground="#636E72" Margin="0,0,0,8" FontSize="13"/>
                        <DatePicker Height="40" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10,0">
                        <TextBlock Text="Loại phòng" Foreground="#636E72" Margin="0,0,0,8" FontSize="13"/>
                        <ComboBox Height="40" VerticalContentAlignment="Center" SelectedIndex="0">
                            <ComboBoxItem Content="Tất cả các loại"/>
                            <ComboBoxItem Content="Phòng Đơn (Single)"/>
                            <ComboBoxItem Content="Phòng Đôi (Double)"/>
                            <ComboBoxItem Content="Phòng VIP (Suite)"/>
                        </ComboBox>
                    </StackPanel>

                    <Button Grid.Column="3" Content="TÌM PHÒNG" Background="#0984E3" Foreground="White" 
                            FontWeight="Bold" Height="40" Margin="10,21,10,0" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <ItemsControl x:Name="RoomList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="320" Height="410" Background="White" CornerRadius="20" Margin="12">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Opacity="0.08" ShadowDepth="2"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#ECEFF1" CornerRadius="20,20,0,0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="IMAGE PLACEHOLDER" Foreground="#B0BEC5" FontSize="10" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Grid Grid.Row="1" Margin="20">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Phòng Premium Suite" FontSize="20" FontWeight="Bold" Foreground="#2D3436"/>
                                        <TextBlock Text="Diện tích: 45m2 • Hướng biển" FontSize="13" Foreground="#636E72" Margin="0,5,0,15"/>

                                        <Separator Background="#F1F2F6" Margin="0,5"/>

                                        <Grid Margin="0,15,0,0">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="Giá từ" FontSize="12" Foreground="#B2BEC3"/>
                                                <TextBlock Text="1.500.000đ" FontSize="20" FontWeight="Bold" Foreground="#D63031"/>
                                            </StackPanel>

                                            <Button HorizontalAlignment="Right" Content="Đặt ngay" Padding="20,10" 
                                                    Background="#00B894" Foreground="White" BorderThickness="0" FontWeight="Bold" Cursor="Hand">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="10"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.Items>
                    <system:String>P01</system:String>
                    <system:String>P02</system:String>
                    <system:String>P03</system:String>
                    <system:String>P04</system:String>
                </ItemsControl.Items>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>