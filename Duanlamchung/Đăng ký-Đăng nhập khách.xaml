<Window x:Class="Duanlamchung.Đăng_ký_Đăng_nhập_khách"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Khách hàng - Đăng nhập / Đăng ký"
        Width="1100" Height="720"
        MinWidth="980" MinHeight="620"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        SnapsToDevicePixels="True">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="44"
                            CornerRadius="18"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="8"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <!-- WHITE THEME ROOT -->
    <Border CornerRadius="18" Background="#FFFFFF">
        <Border.Effect>
            <DropShadowEffect BlurRadius="26" ShadowDepth="0" Opacity="0.28"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TOP BAR (LIGHT) -->
            <Grid Grid.Row="0" Background="#FFFFFF" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Border Width="28" Height="28" CornerRadius="10" Background="#EEF2FF">
                        <Viewbox Margin="6">
                            <Path Fill="#2563EB"
                                  Data="M12,2 C6.5,2 2,6.5 2,12 C2,17.5 6.5,22 12,22 C17.5,22 22,17.5 22,12 C22,6.5 17.5,2 12,2 Z
                                        M12,6 C13.66,6 15,7.34 15,9 C15,10.66 13.66,12 12,12 C10.34,12 9,10.66 9,9 C9,7.34 10.34,6 12,6 Z
                                        M12,20 C9.67,20 7.58,18.86 6.25,17.09 C6.28,15.11 10.5,14.02 12,14.02 C13.5,14.02 17.72,15.11 17.75,17.09 C16.42,18.86 14.33,20 12,20 Z"/>
                        </Viewbox>
                    </Border>
                    <TextBlock Text="Hotel Manager" Foreground="#0F172A" FontSize="14" FontWeight="SemiBold" Margin="10,0,0,0"/>
                    <TextBlock Text="| Khách hàng" Foreground="#64748B" FontSize="12" Margin="8,1,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button Width="40" Height="30" Margin="0,0,6,0"
                            Background="#F1F5F9" BorderBrush="#E2E8F0" Foreground="#0F172A"
                            Click="BtnMinimize_Click">
                        <TextBlock Text="—" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                    <Button Width="40" Height="30"
                            Background="#FEF2F2" BorderBrush="#FECACA" Foreground="#991B1B"
                            Click="BtnClose_Click">
                        <TextBlock Text="✕" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- CONTENT -->
            <Grid Grid.Row="1" Margin="18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT PANEL (WHITE CARD + SOFT GRADIENT) -->
                <Border Grid.Column="0" CornerRadius="16" Background="#FFFFFF" BorderBrush="#E2E8F0" BorderThickness="1" Padding="26">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel>
                            <TextBlock Text="Chào mừng bạn!"
                                       Foreground="#0F172A"
                                       FontSize="30"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Đăng nhập để đặt phòng nhanh hơn, quản lý đặt phòng và nhận ưu đãi thành viên."
                                       Foreground="#475569"
                                       FontSize="13"
                                       TextWrapping="Wrap"
                                       LineHeight="19"
                                       Width="360"/>
                        </StackPanel>

                        <Border Grid.Row="1" Margin="0,22,0,16" CornerRadius="16"
                                Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1">
                            <Grid Margin="18">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Tính năng cho khách"
                                               Foreground="#0F172A"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,10"/>

                                    <StackPanel Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <Border Width="22" Height="22" CornerRadius="7" Background="#EEF2FF" Margin="0,0,10,0">
                                                <Viewbox Margin="5">
                                                    <Path Fill="#2563EB" Data="M9,16.2 L4.8,12 L3.4,13.4 L9,19 L21,7 L19.6,5.6 Z"/>
                                                </Viewbox>
                                            </Border>
                                            <TextBlock Text="Đặt phòng &amp; theo dõi lịch sử đặt"
                                                       Foreground="#0F172A" FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <Border Width="22" Height="22" CornerRadius="7" Background="#EEF2FF" Margin="0,0,10,0">
                                                <Viewbox Margin="5">
                                                    <Path Fill="#2563EB" Data="M12,2 A10,10 0 1 0 22,12 A10,10 0 0 0 12,2 Z M16.2,17.2 L11,12.8 V7 H12.5 V12.1 L17.2,16.2 Z"/>
                                                </Viewbox>
                                            </Border>
                                            <TextBlock Text="Check-in nhanh, nhận thông báo giờ nhận phòng"
                                                       Foreground="#0F172A" FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="22" Height="22" CornerRadius="7" Background="#EEF2FF" Margin="0,0,10,0">
                                                <Viewbox Margin="5">
                                                    <Path Fill="#2563EB" Data="M12,2 L15.09,8.26 L22,9.27 L17,14.14 L18.18,21.02 L12,17.77 L5.82,21.02 L7,14.14 L2,9.27 L8.91,8.26 Z"/>
                                                </Viewbox>
                                            </Border>
                                            <TextBlock Text="Ưu đãi thành viên &amp; mã giảm giá"
                                                       Foreground="#0F172A" FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Border Background="#FFFFFF" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="12" Padding="12">
                                        <TextBlock Text="Tip: Dùng email/SDT để đăng nhập. Nếu quên mật khẩu, hãy chọn “Quên mật khẩu?”."
                                                   Foreground="#475569" FontSize="12" TextWrapping="Wrap" LineHeight="18"/>
                                    </Border>
                                </StackPanel>

                                <Border Grid.Column="1" Width="140" Height="140" CornerRadius="22"
                                        Background="#FFFFFF" BorderBrush="#E2E8F0" BorderThickness="1"
                                        Margin="18,0,0,0" VerticalAlignment="Center">
                                    <Viewbox Margin="16">
                                        <Canvas Width="64" Height="64">
                                            <Path Fill="#0F172A"
                                                  Data="M8,28 L32,10 L56,28 L56,54 L8,54 Z" Opacity="0.9"/>
                                            <Path Fill="#2563EB"
                                                  Data="M24,54 L24,36 L40,36 L40,54 Z"/>
                                            <Path Fill="#F59E0B"
                                                  Data="M18,28 L18,20 L46,20 L46,28 Z" Opacity="0.95"/>
                                        </Canvas>
                                    </Viewbox>
                                </Border>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="2">
                            <TextBlock Text="Bảo mật: Mật khẩu được mã hóa, không hiển thị công khai."
                                       Foreground="#64748B"
                                       FontSize="11"/>
                            <TextBlock Text="© Hotel Manager"
                                       Foreground="#94A3B8"
                                       FontSize="11"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- RIGHT AUTH PANEL (WHITE) -->
                <Border Grid.Column="1" CornerRadius="16" Background="#FFFFFF" BorderBrush="#E2E8F0" BorderThickness="1" Padding="26" Margin="16,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- RESOURCES -->
                        <Grid.Resources>
                            <SolidColorBrush x:Key="AccentBrush" Color="#2563EB"/>
                            <SolidColorBrush x:Key="TextPrimary" Color="#0F172A"/>
                            <SolidColorBrush x:Key="TextMuted" Color="#64748B"/>
                            <SolidColorBrush x:Key="FieldBg" Color="#F8FAFC"/>
                            <SolidColorBrush x:Key="FieldBorder" Color="#E2E8F0"/>

                            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                                <Setter Property="Height" Value="44"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="BorderBrush" Value="#1D4ED8"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="12">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  RecognizesAccessKey="True"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.94"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Opacity" Value="0.84"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.45"/>
                                                    <Setter Property="Cursor" Value="Arrow"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                            </Style>

                            <Style x:Key="FloatingTextBoxStyle" TargetType="TextBox">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                <Setter Property="Background" Value="{StaticResource FieldBg}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource FieldBorder}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="14,18,14,10"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <Border x:Name="Bd"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12"/>
                                                <TextBlock x:Name="Lbl"
                                                           Text="{TemplateBinding Tag}"
                                                           Foreground="{StaticResource TextMuted}"
                                                           Margin="14,0,14,0"
                                                           VerticalAlignment="Top"
                                                           FontSize="11"
                                                           Opacity="0.95"
                                                           IsHitTestVisible="False"/>
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Grid>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                </Trigger>

                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="Text" Value=""/>
                                                        <Condition Property="IsKeyboardFocusWithin" Value="False"/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter TargetName="Lbl" Property="Margin" Value="14,16,14,0"/>
                                                    <Setter TargetName="Lbl" Property="FontSize" Value="13"/>
                                                    <Setter TargetName="Lbl" Property="Opacity" Value="0.65"/>
                                                </MultiTrigger>

                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#EF4444"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <Style x:Key="FloatingPasswordStyle" TargetType="PasswordBox">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                <Setter Property="Background" Value="{StaticResource FieldBg}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource FieldBorder}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="14,18,14,10"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Grid>
                                                <Border x:Name="Bd"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12"/>
                                                <TextBlock x:Name="Lbl"
                                                           Text="{TemplateBinding Tag}"
                                                           Foreground="{StaticResource TextMuted}"
                                                           Margin="14,16,14,0"
                                                           VerticalAlignment="Top"
                                                           FontSize="13"
                                                           Opacity="0.65"
                                                           IsHitTestVisible="False"/>
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Grid>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                    <Setter TargetName="Lbl" Property="Margin" Value="14,0,14,0"/>
                                                    <Setter TargetName="Lbl" Property="FontSize" Value="11"/>
                                                    <Setter TargetName="Lbl" Property="Opacity" Value="0.95"/>
                                                </Trigger>

                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#EF4444"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <Style x:Key="AuthTabControlStyle" TargetType="TabControl">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabControl">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Border Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="14" Padding="6">
                                                    <TabPanel IsItemsHost="True" Margin="2"/>
                                                </Border>

                                                <Border Grid.Row="1" Background="Transparent" Margin="0,14,0,0">
                                                    <ContentPresenter ContentSource="SelectedContent"/>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <Style TargetType="TabItem">
                                <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Margin" Value="4,0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border x:Name="TabBd"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="14,10">
                                                <ContentPresenter ContentSource="Header"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="TabBd" Property="Background" Value="#FFFFFF"/>
                                                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                    <Setter TargetName="TabBd" Property="BorderBrush" Value="#E2E8F0"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="TabBd" Property="Background" Value="#F1F5F9"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <Style TargetType="CheckBox">
                                <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </Grid.Resources>

                        <!-- HEADER -->
                        <StackPanel>
                            <TextBlock Text="Tài khoản khách hàng"
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="22"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Đăng nhập hoặc tạo tài khoản mới để tiếp tục."
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="12"
                                       Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- TABS -->
                        <TabControl Grid.Row="1" Margin="0,18,0,0" Style="{StaticResource AuthTabControlStyle}">
                            <!-- LOGIN -->
                            <TabItem Header="Đăng nhập">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Đăng nhập để tiếp tục đặt phòng"
                                               Foreground="{StaticResource TextMuted}"
                                               FontSize="12"
                                               Margin="2,0,0,14"/>

                                    <TextBox Grid.Row="1" x:Name="TbLoginIdentity"
                                             Style="{StaticResource FloatingTextBoxStyle}"
                                             Tag="Email hoặc Số điện thoại"
                                             Margin="0,0,0,12"/>

                                    <PasswordBox Grid.Row="2" x:Name="PbLoginPassword"
                                                 Style="{StaticResource FloatingPasswordStyle}"
                                                 Tag="Mật khẩu"
                                                 Margin="0,0,0,10"/>

                                    <Grid Grid.Row="3" Margin="2,2,2,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="CbRemember" Content="Ghi nhớ đăng nhập" VerticalAlignment="Center"/>

                                        <Button Grid.Column="1" Content="Quên mật khẩu?"
                                                Background="Transparent" BorderThickness="0"
                                                Foreground="#2563EB"
                                                FontSize="12"
                                                Cursor="Hand"
                                                Padding="6,4"
                                                Click="BtnForgotPassword_Click"/>
                                    </Grid>

                                    <StackPanel Grid.Row="4" Margin="0,16,0,0">
                                        <Button Content="Đăng nhập"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Click="BtnLogin_Click"/>

                                        <Grid Margin="0,14,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Height="1" Background="#E2E8F0" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="hoặc"
                                                       Foreground="{StaticResource TextMuted}"
                                                       Margin="12,0"
                                                       VerticalAlignment="Center"
                                                       FontSize="11"/>
                                            <Border Grid.Column="2" Height="1" Background="#E2E8F0" VerticalAlignment="Center"/>
                                        </Grid>

                                        <Button Content="Tiếp tục như khách vãng lai"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Click="BtnGuestContinue_Click"/>

                                        <TextBlock Margin="2,12,2,0"
                                                   Foreground="{StaticResource TextMuted}"
                                                   FontSize="11"
                                                   Text="Lưu ý: Khách vãng lai vẫn đặt phòng được, nhưng không lưu lịch sử và ưu đãi."/>
                                    </StackPanel>
                                </Grid>
                            </TabItem>

                            <!-- REGISTER -->
                            <TabItem Header="Đăng ký">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <Grid Margin="0,0,0,2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Tạo tài khoản mới (dành cho khách hàng)"
                                                   Foreground="{StaticResource TextMuted}"
                                                   FontSize="12"
                                                   Margin="2,0,0,14"/>

                                        <TextBox Grid.Row="1" x:Name="TbRegFullName"
                                                 Style="{StaticResource FloatingTextBoxStyle}"
                                                 Tag="Họ và tên" Margin="0,0,0,12"/>

                                        <TextBox Grid.Row="2" x:Name="TbRegPhone"
                                                 Style="{StaticResource FloatingTextBoxStyle}"
                                                 Tag="Số điện thoại" Margin="0,0,0,12"/>

                                        <TextBox Grid.Row="3" x:Name="TbRegEmail"
                                                 Style="{StaticResource FloatingTextBoxStyle}"
                                                 Tag="Email" Margin="0,0,0,12"/>

                                        <TextBox Grid.Row="4" x:Name="TbRegCccd"
                                                 Style="{StaticResource FloatingTextBoxStyle}"
                                                 Tag="CCCD/CMND (tuỳ chọn)" Margin="0,0,0,12"/>

                                        <PasswordBox Grid.Row="5" x:Name="PbRegPassword"
                                                     Style="{StaticResource FloatingPasswordStyle}"
                                                     Tag="Mật khẩu" Margin="0,0,0,12"/>

                                        <PasswordBox Grid.Row="6" x:Name="PbRegConfirm"
                                                     Style="{StaticResource FloatingPasswordStyle}"
                                                     Tag="Nhập lại mật khẩu" Margin="0,0,0,10"/>

                                        <StackPanel Grid.Row="7" Margin="2,4,2,0">
                                            <CheckBox x:Name="CbAgree"
                                                      Content="Tôi đồng ý với Điều khoản &amp; Chính sách bảo mật"/>
                                            <Button Content="Tạo tài khoản"
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Margin="0,14,0,0"
                                                    Click="BtnRegister_Click"/>

                                            <TextBlock Margin="0,10,0,0"
                                                       Foreground="{StaticResource TextMuted}"
                                                       FontSize="11"
                                                       Text="Gợi ý: Mật khẩu nên có ít nhất 8 ký tự, gồm chữ và số."/>
                                        </StackPanel>
                                    </Grid>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>

                        <!-- FOOTER -->
                        <Grid Grid.Row="2" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Foreground="#94A3B8" FontSize="11"
                                       Text="Nếu gặp lỗi đăng nhập, kiểm tra lại email/SDT hoặc thử đặt lại mật khẩu."/>
                            <TextBlock Grid.Column="1" Foreground="#94A3B8" FontSize="11" Margin="12,0,0,0"
                                       Text="v1.0"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
