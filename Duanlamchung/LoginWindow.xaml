<Window x:Class="Duanlamchung.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="520" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#F3F4F6" CornerRadius="12" Padding="14" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="HỆ THỐNG QUẢN LÝ KHÁCH SẠN" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="Chọn loại tài khoản để đăng nhập." Foreground="Gray" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Tabs -->
        <TabControl Grid.Row="1">
            <!-- TAB NHÂN VIÊN -->
            <TabItem Header="Nhân viên">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="12" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Đăng nhập nhân viên" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>

                            <TextBlock Text="Username" Foreground="Gray"/>
                            <TextBox x:Name="txtStaffUsername" Height="32" Margin="0,6,0,12"/>

                            <TextBlock Text="Password" Foreground="Gray"/>
                            <PasswordBox x:Name="txtStaffPassword" Height="32" Margin="0,6,0,16"/>

                            <Button Content="Đăng nhập nhân viên"
                                    Height="36"
                                    Click="btnLoginStaff_Click"/>

                            <TextBlock x:Name="txtStaffMsg" Foreground="Tomato" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Margin="12,0,0,0" Background="#F9FAFB" CornerRadius="12" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Ghi chú" FontWeight="Bold"/>
                            <TextBlock Text="• Nhân viên đăng nhập bằng tài khoản trong bảng users."
                                       Margin="0,8,0,0" TextWrapping="Wrap"/>
                            <TextBlock Text="• Sau khi đăng nhập sẽ vào Dashboard/Lễ tân."
                                       Margin="0,6,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- TAB KHÁCH -->
            <TabItem Header="Khách">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="12" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Đăng nhập khách" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>

                            <TextBlock Text="SĐT hoặc CCCD" Foreground="Gray"/>
                            <TextBox x:Name="txtCusKey" Height="32" Margin="0,6,0,16"
                                     ToolTip="Nhập phone hoặc identity_card"/>

                            <Button Content="Đăng nhập khách"
                                    Height="36"
                                    Click="btnLoginCustomer_Click"/>

                            <TextBlock x:Name="txtCusMsg" Foreground="Tomato" Margin="0,12,0,0"/>

                            <Separator Margin="0,14,0,14"/>

                            <Button Content="Tạo khách nhanh (demo)"
                                    Height="32"
                                    Click="btnCreateCustomerDemo_Click"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Margin="12,0,0,0" Background="#F9FAFB" CornerRadius="12" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Ghi chú" FontWeight="Bold"/>
                            <TextBlock Text="• Khách đăng nhập bằng SĐT/CCCD (dữ liệu trong bảng customers)."
                                       Margin="0,8,0,0" TextWrapping="Wrap"/>
                            <TextBlock Text="• Nếu không có trong hệ thống thì cần đăng ký (hoặc dùng nút demo)."
                                       Margin="0,6,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>