<Window x:Class="Duanlamchung.DashboardLeTan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Duanlamchung"
        mc:Ignorable="d"
        Title="DashboardLeTan"
        Height="450"
        Width="800"
        x:Name="winDashboardLeTan">

    <Grid x:Name="grdMain">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0"
                Background="#34495E"
                x:Name="bdSidebar">

            <StackPanel Margin="15" x:Name="spMenu">

                <TextBlock Text="HOTEL SYSTEM"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,25"
                           x:Name="txtTitle"/>

                <Button x:Name="btnDashboard"
                        Content="Dashboard"
                        Margin="0,5"
                        Height="40"
                        Click="btnDashboard_Click"/>

                <Button x:Name="btnRoomMap"
                        Content="Room Map"
                        Margin="0,5"
                        Height="40"
                        Click="btnRoomMap_Click"/>

                <Button x:Name="btnBooking"
                        Content="Booking"
                        Margin="0,5"
                        Height="40"
                        Click="btnBooking_Click"/>

                <Button x:Name="btnCheckInOut"
                        Content="Check-in / Check-out"
                        Margin="0,5"
                        Height="40"
                        Click="btnCheckInOut_Click"/>

                <Button x:Name="btnLogout"
                        Content="Logout"
                        Margin="0,30,0,0"
                        Height="40"
                        Click="btnLogout_Click"/>

            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" Margin="20" x:Name="grdContent">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="0,0,0,20" x:Name="spHeader">
                <TextBlock Text="Receptionist Dashboard"
                           FontSize="26"
                           FontWeight="Bold"
                           x:Name="txtHeader"/>

                <TextBlock Text="Hotel overview"
                           Foreground="Gray"
                           x:Name="txtSubHeader"/>
            </StackPanel>

            <UniformGrid Grid.Row="1"
                         Columns="4"
                         Margin="0,0,0,20"
                         x:Name="ugStatistics">

                <Border Background="White" Margin="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Available Rooms"/>
                        <TextBlock x:Name="txtAvailableRooms"
                                   Text="12"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="Green"/>
                    </StackPanel>
                </Border>

                <Border Background="White" Margin="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Occupied Rooms"/>
                        <TextBlock x:Name="txtOccupiedRooms"
                                   Text="18"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="Red"/>
                    </StackPanel>
                </Border>

                <Border Background="White" Margin="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Today Check-in"/>
                        <TextBlock x:Name="txtTodayCheckIn"
                                   Text="7"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="Blue"/>
                    </StackPanel>
                </Border>

                <Border Background="White" Margin="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Today Check-out"/>
                        <TextBlock x:Name="txtTodayCheckOut"
                                   Text="5"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="Orange"/>
                    </StackPanel>
                </Border>

            </UniformGrid>

            <Grid Grid.Row="2" x:Name="grdActions">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnOpenRoomMap"
                        Grid.Column="0"
                        Content="Open Room Map"
                        Height="60"
                        Margin="10"
                        Click="btnOpenRoomMap_Click"/>

                <Button x:Name="btnCreateBooking"
                        Grid.Column="1"
                        Content="Create Booking"
                        Height="60"
                        Margin="10"
                        Click="btnCreateBooking_Click"/>

                <Button x:Name="btnQuickCheckInOut"
                        Grid.Column="2"
                        Content="Check-in / Check-out"
                        Height="60"
                        Margin="10"
                        Click="btnQuickCheckInOut_Click"/>

            </Grid>

        </Grid>
    </Grid>
</Window> 