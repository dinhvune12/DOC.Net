<Window x:Class="Duanlamchung.Thongtinphong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Duanlamchung"
        mc:Ignorable="d"
        Title="Thongtinphong" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Thông Tin Ph?ng" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
            <TextBlock Text="S? Ph?ng:"/>
            <TextBox x:Name="txtRoomNumber" Margin="0,5,0,10" Padding="5"/>
            <TextBlock Text="Lo?i Ph?ng:"/>
            <ComboBox x:Name="cbRoomType" Margin="0,5,0,10" Padding="5">
                <ComboBoxItem Content="Ph?ng Đơn"/>
                <ComboBoxItem Content="Ph?ng Đôi"/>
                <ComboBoxItem Content="Vip"/>
            </ComboBox>
            <TextBlock Text="Tr?ng Thái:"/>
            <ComboBox x:Name="cbStatus" Margin="0,5,0,15" Padding="5">
                <ComboBoxItem Content="Tr?ng"/>
                <ComboBoxItem Content="Đang s? d?ng"/>
                <ComboBoxItem Content="Đang s?a ch?a"/>
            </ComboBox>
            <Button Content="Thêm M?i" Background="#28A745" Foreground="White" Margin="0,5" Padding="10"/>
            <Button Content="C?p Nh?t" Background="#007BFF" Foreground="White" Margin="0,5" Padding="10"/>
            <Button Content="Xóa Ph?ng" Background="#DC3545" Foreground="White" Margin="0,5" Padding="10"/>
        </StackPanel>
        <DataGrid Grid.Column="1" x:Name="dgRooms" AutoGenerateColumns="False" CanUserAddRows="False" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="S? Ph?ng" Binding="{Binding RoomNumber}" Width="100"/>
                <DataGridTextColumn Header="Lo?i Ph?ng" Binding="{Binding Type}" Width="*"/>
                <DataGridTextColumn Header="Tr?ng Thái" Binding="{Binding Status}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
