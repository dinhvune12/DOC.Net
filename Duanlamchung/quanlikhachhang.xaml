<Window x:Class="Duanlamchung.quanlikhachhang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Duanlamchung"
        mc:Ignorable="d"
        Title="Quản lý khách hàng" Height="520" Width="950"
        WindowStartupLocation="CenterScreen" Background="#F6F7FB">

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="14" Margin="0,0,0,10">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="QUẢN LÝ KHÁCH HÀNG" FontSize="20" FontWeight="Bold" Foreground="#1F2A37"/>

                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnRefresh" Content="Làm mới"
                            Width="110" Height="34" Margin="0,0,8,0"
                            Background="#E5E7EB" Foreground="#111827"
                            BorderThickness="0" Cursor="Hand"/>
                    <Button x:Name="btnExport" Content="Xuất (tuỳ)"
                            Width="110" Height="34"
                            Background="#E5E7EB" Foreground="#111827"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="12" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="TÌM KIẾM" FontWeight="Bold" Foreground="#374151"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <ComboBox x:Name="cbSearchBy" Width="140" Height="32" SelectedIndex="0" Margin="0,0,8,0">
                            <ComboBoxItem Content="Tên"/>
                            <ComboBoxItem Content="CCCD"/>
                            <ComboBoxItem Content="SĐT"/>
                            <ComboBoxItem Content="Số phòng"/>
                        </ComboBox>

                        <TextBox x:Name="txtSearch" Height="32" VerticalContentAlignment="Center"
                                 Padding="10,0" FontSize="13"
                                 Width="260"
                                 ToolTip="Nhập nội dung cần tìm..."/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="btnSearch" Content="Tìm"
                                Width="90" Height="34" Margin="0,0,8,0"
                                Background="#2563EB" Foreground="White"
                                BorderThickness="0" Cursor="Hand"/>
                        <Button x:Name="btnClearSearch" Content="Xóa lọc"
                                Width="110" Height="34"
                                Background="#E5E7EB" Foreground="#111827"
                                BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                               Text="THÔNG TIN KHÁCH HÀNG" FontWeight="Bold" Foreground="#374151"/>

                    <TextBlock Grid.Row="1" Text="Họ tên:" VerticalAlignment="Top" Foreground="#374151" Margin="0,21,0,0"/>
                    <TextBox x:Name="txtHoTen" Grid.Row="1" Height="32" Margin="0,8,10,44"
                             VerticalContentAlignment="Center" Padding="10,0" Grid.RowSpan="2" Grid.Column="1"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="CCCD:" VerticalAlignment="Center" Foreground="#374151" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtCCCD" Grid.Row="2" Grid.Column="1" Height="32" Margin="0,10,10,0"
                             VerticalContentAlignment="Center" Padding="10,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Text="SĐT:" VerticalAlignment="Top" Foreground="#374151" Margin="10,20,134,0" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="txtSDT" Grid.Row="1" Grid.Column="2" Height="32" Margin="117,8,2,44"
                             VerticalContentAlignment="Center" Padding="10,0" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Số phòng:" VerticalAlignment="Top" Foreground="#374151" Margin="10,22,135,0" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                    <TextBox x:Name="txtSoPhong" Grid.Row="2" Grid.Column="2" Height="32" Margin="117,10,3,3"
                             VerticalContentAlignment="Center" Padding="10,0"
                             ToolTip="Nếu đang ở/đã đặt (tuỳ bạn quản lý)" Grid.ColumnSpan="2"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Ghi chú:" VerticalAlignment="Center" Foreground="#374151" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtGhiChu" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"
                             Height="64" Margin="0,10,0,0"
                             VerticalContentAlignment="Center" Padding="10,6"
                             TextWrapping="Wrap" AcceptsReturn="True"/>

                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4"
                                Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button x:Name="btnAdd" Content="Thêm"
                                Width="90" Height="34" Margin="0,0,8,0"
                                Background="#16A34A" Foreground="White"
                                BorderThickness="0" Cursor="Hand"/>
                        <Button x:Name="btnUpdate" Content="Sửa"
                                Width="90" Height="34" Margin="0,0,8,0"
                                Background="#F59E0B" Foreground="White"
                                BorderThickness="0" Cursor="Hand"/>
                        <Button x:Name="btnDelete" Content="Xóa"
                                Width="90" Height="34" Margin="0,0,8,0"
                                Background="#DC2626" Foreground="White"
                                BorderThickness="0" Cursor="Hand"/>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>


        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="DANH SÁCH KHÁCH HÀNG" FontWeight="Bold" Foreground="#374151"/>
                    <TextBlock x:Name="txtCount" Text="(0 dòng)" Foreground="#6B7280" Margin="8,0,0,0"/>
                </DockPanel>

                <DataGrid x:Name="dgCustomers" Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          RowHeight="34"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          AlternationCount="2"
                          Margin="0,0,0,0" SelectionChanged="dgCustomers_SelectionChanged">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="AlternationIndex" Value="1">
                                    <Setter Property="Background" Value="#F9FAFB"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#DBEAFE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="Background" Value="#F3F4F6"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Height" Value="36"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã KH" Binding="{Binding MaKH}" Width="90"/>
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="*"/>
                        <DataGridTextColumn Header="CCCD" Binding="{Binding CCCD}" Width="140"/>
                        <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}" Width="120"/>
                        <DataGridTextColumn Header="Số phòng" Binding="{Binding SoPhong}" Width="90"/>
                        <DataGridTextColumn Header="Ghi chú" Binding="{Binding GhiChu}" Width="220"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>


    </Grid>
</Window>